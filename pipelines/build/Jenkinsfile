pipeline {
    agent any
    stages {
        stage('Checkout Stage') {
          steps {
            checkout([$class: 'GitSCM',
                branches: [[name: '*/master']],
                userRemoteConfigs: [
                  [url: 'git@github.com:rkamradt/MondoReacto.git',
                   credentialsId: 'rkamradt']]])
            sh """
              ls MondoReacto
            """
          }
        }
        stage('Build Stage') {
            agent {
              kubernetes {
              label 'maven'
              idleMinutes 10
              yamlFile 'pods/maven-pod.yaml'
              defaultContainer 'maven'
              }
            }
            steps {
              git 'https://github.com/jenkinsci/kubernetes-plugin.git'
              container('maven') {
                sh 'mvn -B clean install'
              }
            }
        }
    }
}
